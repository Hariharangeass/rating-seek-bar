<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DemoActivity">

    <com.trafi.ratingseekbar.RatingSeekBar
        android:id="@+id/rating_seek_bar_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:rsb_max="10" />

    <TextView
        android:id="@+id/rating_label_one"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal" />

    <com.trafi.ratingseekbar.RatingSeekBar
        android:id="@+id/rating_seek_bar_two"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        app:rsb_active_color="#8F8"
        app:rsb_active_text_color="#E44"
        app:rsb_inactive_color="@color/colorPrimaryDark"
        app:rsb_inactive_text_color="#CCC"
        app:rsb_max="5"
        app:rsb_text_size="18sp" />

    <com.trafi.ratingseekbar.RatingSeekBar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:rsb_active_color="#EE4"
        app:rsb_active_text_color="@android:color/black"
        app:rsb_inactive_color="@android:color/black"
        app:rsb_inactive_text_color="#CC4"
        app:rsb_max="7"
        app:rsb_text_size="18sp" />

</LinearLayout>
